{
  "include": ["src/server/*", "src/lib/*", "src/client/*", "test/*"],
  "compilerOptions": {
    "outDir": "lib",
    "module": "preserve",
    "target": "es2016",
    "moduleResolution": "bundler",
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "types": [
      "mocha",
      "meteor"
    ],

    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "maxNodeModuleJsDepth": 2,
    "baseUrl": ".",
    "paths": {
      "meteor/znewsham:mongo-collection-hooks": [
        "./src/server/index.ts"
      ],
      "meteor/cultofcoders:redis-oplog": [
        "../redis-oplog/redis-oplog.js"
      ],
      "meteor/cultofcoders:redis-oplog/*": [
        "../redis-oplog/*"
      ],
      "meteor/*": [
        "../node_modules/@types/meteor/*"
      ],
